<div class="container">
    <div class="form-card">
        <a href="/alunos">Voltar</a>
        <h1 class="titulo">Editar Aluno</h1>

        <form action="/editar/{{aluno.id}}" method="POST" class="formulario">

            <div class="campo">
                <label for="nome">Nome</label>
                <input 
                    type="text" 
                    id="nome" 
                    name="nome" 
                    value="{{aluno.nome}}" 
                    placeholder="Digite o nome do aluno" 
                    required
                >
            </div>

            <div class="campo">
                <label for="telefone">Telefone</label>
                <input 
                    type="text" 
                    id="telefone" 
                    name="telefone" 
                    value="{{aluno.telefone}}" 
                    placeholder="(00) 00000-0000" 
                    required
                >
            </div>

            <div class="campo">
                <label for="email">E-mail</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    value="{{aluno.email}}" 
                    placeholder="email@exemplo.com" 
                    required
                >
            </div>

            <button class="btn salvar">Atualizar</button>
        </form>
    </div>
</div>